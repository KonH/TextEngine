<Window x:Class="WindowsClassic.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WindowsClassic"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ScrollViewer Margin="10,10,10,45">
            <TextBlock Name="TextView" HorizontalAlignment="Stretch" TextWrapping="Wrap" VerticalAlignment="Stretch"/>
        </ScrollViewer>
        <TextBox Name="TextInput" HorizontalAlignment="Stretch" Height="25" Margin="10,0,95,10" TextWrapping="Wrap" VerticalAlignment="Bottom"/>
        <Button Name="SubmitButton" Content="OK" Height="25" HorizontalAlignment="Right" Margin="0,0,10,10" VerticalAlignment="Bottom" Width="75" Click="OnSubmitButtonClick"/>
    </Grid>
</Window>
